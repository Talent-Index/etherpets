# Production Environment Configuration

# Server
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb://username:password@host:port/etherpets?authSource=admin

# JWT
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Blockchain
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
PRIVATE_KEY=your_production_wallet_private_key
CHAIN_ID=43114

# Smart Contract Addresses (Update after deployment)
PET_NFT_ADDRESS=
GAME_LOGIC_ADDRESS=
ITEM_CONTRACT_ADDRESS=
REWARD_TOKEN_ADDRESS=
MEDITATION_ADDRESS=
AURA_SYSTEM_ADDRESS=
MARKETPLACE_ADDRESS=

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Admin
ADMIN_WALLETS=0xYourAdminWallet1,0xYourAdminWallet2

# Rate Limiting
RATE_LIMIT_MAX=200

# Logging
LOG_LEVEL=info

# Monitoring
MONITORING_ENABLED=true

# Cache
REDIS_URL=redis://localhost:6379

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true